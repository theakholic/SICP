#reader(lib "htdp-advanced-reader.ss" "lang")((modname square_roots_improved) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #t #t none #f () #f)))

(define CLOSE-ENOUGH 1e-5)

(define (good-enough2? guess x)
  (< (/ (abs (- (improve guess x) guess)) guess) 1e-2))

(define (good-enough? guess x)
 (<  (abs (- (sqr guess) x)) 1e-4))

(define (improve guess x)
  (/ (+ guess (/ x guess)) 2))

(define (sqr-iter guess x)
  (if (good-enough2? guess x)
      guess
      (sqr-iter (improve guess x) x)))

(define (my-sqrt x)
  (sqr-iter 1.0 x))

